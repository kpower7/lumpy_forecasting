# Environment Configuration for Supply Chain Challenge (SCC)
# Copy this file to .env and add your actual configuration values

# Data Paths
DATA_PATH=./data/
OUTPUT_PATH=./outputs/
PLOTS_PATH=./plots/

# Model Configuration
DEFAULT_TEST_SIZE=0.2
RANDOM_STATE=42
CV_FOLDS=5

# XGBoost Parameters
XGBOOST_N_ESTIMATORS=100
XGBOOST_MAX_DEPTH=6
XGBOOST_LEARNING_RATE=0.1

# CatBoost Parameters
CATBOOST_ITERATIONS=1000
CATBOOST_DEPTH=6
